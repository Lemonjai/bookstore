<% if params[:controller] == 'about' %>
	<div class="well">
	  <h3>Location Info</h3>
	  <ul>
	    <li>The Bookstore</li>
	    <li>123 Fake Street, Unit 0</li>
	    <li>ABC, DEF 12345</li>
	    <li>Phone: (123) 456 7890</li>
	    <li>Email: support@thebooktstore.com</li>
	  </ul>
	</div>
<% end %>

<% if params[:controller] == 'books' && params[:action] == 'index' || params[:action] == 'show' %>
	<div class="list-group">
    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category.id), class: 'list-group-item' %>
    <% end %>
	</div>
<% end %>